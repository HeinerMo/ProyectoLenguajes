@model EventoModel

@{
    ViewData["Title"] = "Actualizar";
}

<h2 class="text-uppercase text-center mb-5"></h2>
<div class="container h-100 d-flex justify-content-center align-items-center">
    <div class="h-50 d-flex justify-content-center align-items-center" style="width:30rem; background-color: #ffffff">
        <div class="mx-4 p-3">
            <div class="text-center my-4">
                <p class="h4 font-weight-bold">Actualizar Evento</p>
            </div>

            <form enctype="multipart/form-data" asp-action="ActualizarEvento">
                @foreach (EventoModel eventoActual in ViewBag.Eventos)
                {
                <div class="form-floating mb-3">
                    <input asp-for="Nombre" value="@eventoActual.Nombre" type="text" class="form-control" placeholder="Nombre del evento" required>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label class="form-label" for="lblname">Inicio del evento</label>
                    <input asp-for="Start_Event" value="@eventoActual.Start_Event.ToString("yyyy-MM-dd HH:mm:ss")" type="datetime-local" class="form-control" required>
                    <span asp-validation-for="Start_Event" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label class="form-label" for="lblname">Fin del evento</label>
                    <input asp-for="End_Event" value="@eventoActual.End_Event.ToString("yyyy-MM-dd HH:mm:ss")" type="datetime-local" class="form-control" required>
                    <span asp-validation-for="End_Event" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label class="form-label" for="lblname">Lugar del evento</label>
                    <select asp-for="Recinto" class="select form-control" required>
                        <option>@eventoActual.Recinto</option>
                        <option>Turrialba</option>
                        <option>Paraíso</option>
                        <option>Guápiles</option>
                        <option>San Ramón</option>
                        <option>Grecia</option>
                        <option>Santa Cruz</option>
                        <option>Limón</option>
                        <option>Golfito</option>
                    </select>
                </div>

                    <div class="form-floating mb-3">
                        <input asp-for="NombreArtista" value="@eventoActual.NombreArtista" type="text" class="form-control" placeholder="Nombre del artista" required>
                        <span asp-validation-for="NombreArtista" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="CancionFamosa" value="@eventoActual.CancionFamosa" type="text" class="form-control" placeholder="Cancion famosa" required>
                        <span asp-validation-for="CancionFamosa" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-3">
                        <label class="form-label" for="lblname">Imagen promocional del evento</label>
                        <input asp-for="Imagen" value="@eventoActual.Imagen" class="form-control" type="file" accept=".png, .jpeg, .jpg" placeholder="Foto del artista" onchange="preview()">
                        <img id="frame" name="frame" src="" class="rounded mx-auto d-block" width="20%" />
                    </div>

                    <div class="form-outline mb-3">
                        <input asp-for="Taquilla" value="@eventoActual.Taquilla" type="number" class="form-control" step="1" min='0' placeholder="Taquilla" required />
                        <span asp-validation-for="Taquilla" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center">
                        <input asp-for="Id" value="@eventoActual.Id" hidden />
                        <input type="submit" value="Actualizar Evento" class="btn-primary btn btn-block btn-lg gradient-custom-4" style="background-color: #213B45; font-palette:light" />
                    </div>
                    }
            </form>

            <h2 class="text-uppercase text-center mb-5"></h2>
            <h2 class="text-uppercase text-center mb-5"></h2>
        </div>
    </div>
</div>

